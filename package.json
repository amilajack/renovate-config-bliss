{
  "name": "renovate-config-bliss",
  "version": "0.0.4",
  "main": "index.js",
  "repository": "git@github.com:amilajack/renovate-config-bliss.git",
  "author": "Amila Welihinda <amilajack@gmail.com>",
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      },
      "packageRules": [
        {
          "packagePatterns": [
            "(^|.*-)(eslint|prettier|stylelint)(-.*|$)"
          ],
          "groupName": "linters"
        }
      ],
      "rangeStrategy": "bump",
      "schedule": "before 3am on the first day of the month",
      "packageRules": [
        {
          "depTypeList": [
            "peerDependencies"
          ],
          "enabled": false
        }
      ]
    }
  },
  "devDependencies": {
    "renovate": "^19.36.2"
  },
  "scripts": {
    "test": "renovate-config-validator"
  }
}
